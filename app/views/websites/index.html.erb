<h1>Listing websites</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Minute</th>
    <th>Name</th>
    <th>Summary</th>
    <th>Failed tries</th>
    <th>Successful tries</th>
    <th>User</th>
    <% if user_signed_in? %>
    <th></th>
    <th></th>
    <th></th>
    <% end %>
  </tr>

<% @websites.each do |website| %>
  <tr>
    <td><%= website.url %></td>
    <td><%= website.minute %></td>
    <td><%= website.name %></td>
    <td><%= website.summary %></td>
    <td><%= website.failed_tries %></td>
    <td><%= website.successful_tries %></td>
    <td><%= website.user.name %></td>
    <% if user_signed_in? %>
    <td><%= link_to 'Show', website %></td>
    <td><%= link_to 'Edit', edit_website_path(website) %></td>
    <td><%= link_to 'Destroy', website, confirm: 'Are you sure?', method: :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />
<% if user_signed_in? %>
<%= link_to 'New Website', new_website_path %>
<% end %>
